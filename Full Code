    <!-- Typed.js for typing animation -->
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {

            let currentTheme = localStorage.getItem('theme') || 'dark';
            
            const applyTheme = (theme) => {
                const body = document.body;
                const themeIcon = `<i class="fas fa-${theme === 'light' ? 'moon' : 'sun'}"></i>`;
                document.getElementById('theme-switcher').innerHTML = themeIcon;
                document.getElementById('theme-switcher-mobile').querySelector('i').className = `fas fa-${theme === 'light' ? 'moon' : 'sun'} mr-2`;

                if (theme === 'light') {
                    body.classList.add('light-mode');
                } else {
                    body.classList.remove('light-mode');
                }
            };
            
            const toggleTheme = () => {
                currentTheme = currentTheme === 'light' ? 'dark' : 'light';
                localStorage.setItem('theme', currentTheme);
                applyTheme(currentTheme);
            };
            
            // --- Event Listeners ---
            document.querySelectorAll('#theme-switcher, #theme-switcher-mobile').forEach(button => {
                button.addEventListener('click', toggleTheme);
            });
            
            // --- Header & Menu ---
            const header = document.getElementById('header');
            window.addEventListener('scroll', () => header.classList.toggle('scrolled', window.scrollY > 50));
            
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
            
            document.querySelectorAll('#mobile-menu a, nav a').forEach(link => {
                link.addEventListener('click', (e) => {
                    if(e.currentTarget.getAttribute('href').startsWith('#')) {
                        if (!mobileMenu.classList.contains('hidden')) mobileMenu.classList.add('hidden');
                    }
                });
            });

            // --- Active Nav Link on Scroll ---
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');
            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    if (pageYOffset >= section.offsetTop - 70) current = section.getAttribute('id');
                });
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').includes(current)) link.classList.add('active');
                });
            });
            
            // --- Interactive Canvas Background ---
            const canvas = document.getElementById('interactive-canvas');
            const ctx = canvas.getContext('2d');
            let particlesArray = [];
            const mouse = { x: null, y: null };

            function setCanvasSize() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            }
            setCanvasSize();

            window.addEventListener('resize', setCanvasSize);
            
            class Particle {
                constructor() {
                    this.x = mouse.x;
                    this.y = mouse.y;
                    this.size = Math.random() * 8 + 1;
                    this.speedX = Math.random() * 3 - 1.5;
                    this.speedY = Math.random() * 3 - 1.5;
                    this.color = `hsl(${Math.random() * 50 + 180}, 100%, 70%)`; // Shades of blue/cyan
                    this.life = 1;
                }
                update() {
                    this.x += this.speedX;
                    this.y += this.speedY;
                    if (this.size > 0.2) this.size -= 0.1;
                    this.life -= 0.02;
                }
                draw() {
                    ctx.fillStyle = this.color;
                    ctx.globalAlpha = this.life > 0 ? this.life : 0;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                    ctx.fill();
                    ctx.shadowColor = this.color;
                    ctx.shadowBlur = 15;
                }
            }
            
            // --- Unified handler for mouse and touch ---
            const handleInteraction = (x, y) => {
                mouse.x = x;
                mouse.y = y;
                // Create a small burst of particles for a more noticeable effect
                const particleCount = 5; 
                for (let i = 0; i < particleCount; i++) {
                    particlesArray.push(new Particle());
                }
            };

            // --- Mouse move event ---
            window.addEventListener('mousemove', function(event) {
                handleInteraction(event.clientX, event.clientY);
            });

            // --- Touch events for mobile ---
            window.addEventListener('touchstart', function(event) {
                if (event.touches.length > 0) {
                    const touch = event.touches[0];
                    handleInteraction(touch.clientX, touch.clientY);
                }
            }, { passive: true }); // Use passive for better scroll performance

            window.addEventListener('touchmove', function(event) {
                if (event.touches.length > 0) {
                    const touch = event.touches[0];
                    handleInteraction(touch.clientX, touch.clientY);
                }
            }, { passive: true }); // Use passive for better scroll performance


            function handleParticles() {
                for (let i = 0; i < particlesArray.length; i++) {
                    particlesArray[i].update();
                    particlesArray[i].draw();
                    if (particlesArray[i].life <= 0) {
                        particlesArray.splice(i, 1);
                        i--;
                    }
                }
            }

            function animate() {
                ctx.shadowBlur = 0;
                ctx.globalAlpha = 0.2;
                ctx.fillStyle = getComputedStyle(document.body).getPropertyValue('--bg-primary').trim();
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                handleParticles();
                requestAnimationFrame(animate);
            }
            animate();


            // --- On-Scroll Fade-In Animations ---
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });
            document.querySelectorAll('.fade-in-section').forEach(el => observer.observe(el));

            // --- Skill Bar Animation ---
            const skillObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const bar = entry.target;
                        bar.style.width = bar.dataset.width;
                        skillObserver.unobserve(bar);
                    }
                });
            }, { threshold: 0.5 });
            document.querySelectorAll('.skill-bar-fill').forEach(bar => {
                skillObserver.observe(bar);
            });

            // --- Circular Progress Bar Animation ---
            const animateProgressRing = (entry) => {
                const ring = entry.target;
                const circle = ring.querySelector('.progress-ring__circle');
                const radius = circle.r.baseVal.value;
                const circumference = 2 * Math.PI * radius;
                const value = ring.getAttribute('data-value');
                const offset = circumference - (value / 100) * circumference;
                const text = ring.querySelector('.progress-text');
                
                circle.style.strokeDasharray = `${circumference} ${circumference}`;
                circle.style.strokeDashoffset = circumference;
                
                // Trigger animation
                setTimeout(() => {
                    circle.style.strokeDashoffset = offset;
                }, 100);

                // Animate text
                let start = 0;
                const duration = 1500; // ms
                const stepTime = 10; // ms
                const steps = duration / stepTime;
                const increment = value / steps;

                const timer = setInterval(() => {
                    start += increment;
                    if (start >= value) {
                        start = value;
                        clearInterval(timer);
                    }
                    text.textContent = `${Math.floor(start)}%`;
                }, stepTime);
            };

            const ringObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateProgressRing(entry);
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });

            document.querySelectorAll('.progress-ring').forEach(ring => {
                ringObserver.observe(ring);
            });

            // --- Scroller Mouse Drag Function ---
            const setupScroller = (scrollerId) => {
                const scroller = document.getElementById(scrollerId);
                if (scroller) {
                    const scrollerInner = scroller.querySelector('.scroller-inner');
                    let isDown = false;
                    let startX;
                    let scrollLeft;

                    scroller.addEventListener('mousedown', (e) => {
                        isDown = true;
                        scroller.classList.add('active');
                        if (scrollerInner) scrollerInner.style.animationPlayState = 'paused';
                        startX = e.pageX - scroller.offsetLeft;
                        scrollLeft = scroller.scrollLeft;
                    });
                    scroller.addEventListener('mouseleave', () => {
                        isDown = false;
                        scroller.classList.remove('active');
                        if (scrollerInner) scrollerInner.style.animationPlayState = 'running';
                    });
                    scroller.addEventListener('mouseup', () => {
                        isDown = false;
                        scroller.classList.remove('active');
                        if (scrollerInner) scrollerInner.style.animationPlayState = 'running';
                    });
                    scroller.addEventListener('mousemove', (e) => {
                        if (!isDown) return;
                        e.preventDefault();
                        const x = e.pageX - scroller.offsetLeft;
                        const walk = (x - startX) * 2; // The multiplier affects drag speed
                        scroller.scrollLeft = scrollLeft - walk;
                    });
                }
            };

            // Apply to logo scroller
            setupScroller('logo-scroller');

            // --- Achievements Counter Animation ---
            const achievementsSection = document.getElementById('achievements');
            const achievementsObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const counters = entry.target.querySelectorAll('[data-target]');
                        counters.forEach(counter => {
                            const updateCount = () => {
                                const target = +counter.getAttribute('data-target');
                                const count = +counter.innerText.replace('+', '');
                                const increment = target / 200; // Adjust speed of animation

                                if (count < target) {
                                    counter.innerText = `${Math.ceil(count + increment)}+`;
                                    setTimeout(updateCount, 10);
                                } else {
                                    counter.innerText = `${target}+`;
                                }
                            };
                            updateCount();
                        });
                        observer.unobserve(entry.target); // Animate only once
                    }
                });
            }, { threshold: 0.5 });

            if (achievementsSection) {
                achievementsObserver.observe(achievementsSection);
            }
            
            // --- Testimonial Slider ---
            const testimonialSlider = new Swiper('.testimonial-slider', {
                loop: true,
                grabCursor: true,
                speed: 1000,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                slidesPerView: 1,
                spaceBetween: 30,
                breakpoints: {
                    768: {
                        slidesPerView: 2,
                        spaceBetween: 30
                    },
                    1280: { // xl screens
                        slidesPerView: 3,
                        spaceBetween: 30
                    }
                }
            });

            // --- Photo Gallery Slider ---
            const photoSlider = new Swiper('.photo-slider', {
                effect: 'coverflow',
                grabCursor: true,
                centeredSlides: true,
                loop: true,
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                },
                slidesPerView: 1.5, // Better for mobile to hint at more slides
                coverflowEffect: {
                    rotate: 20, // Reduced rotation to make it more compact
                    stretch: 0,
                    depth: 150, // Adjusted for a nice perspective
                    modifier: 1,
                    slideShadows: true,
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                breakpoints: {
                    640: { // sm screens
                        slidesPerView: 3,
                    },
                    1024: { // lg screens
                        slidesPerView: 5, // Shows 5 slides as requested
                    }
                }
            });


            // --- Contact Form Submission & Confetti ---
            const form = document.getElementById('contact-form');
            const formStatus = document.getElementById('form-status');

            function triggerConfetti() {
                const confettiCount = 100;
                const colors = ['#F87171', '#FBBF24', '#34D399', '#60A5FA', '#A78BFA'];
                for (let i = 0; i < confettiCount; i++) {
                    const confetti = document.createElement('div');
                    confetti.classList.add('confetti');
                    confetti.style.left = `${Math.random() * 100}vw`;
                    confetti.style.top = `${-20 - Math.random() * 20}px`;
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = `${Math.random() * 2}s`;
                    confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                    document.body.appendChild(confetti);

                    setTimeout(() => {
                        confetti.remove();
                    }, 3000);
                }
            }

            async function handleSubmit(event) {
                event.preventDefault();
                const data = new FormData(event.target);
                fetch(event.target.action, {
                    method: form.method,
                    body: data,
                    headers: {
                        'Accept': 'application/json'
                    }
                }).then(response => {
                    if (response.ok) {
                        triggerConfetti();
                        formStatus.innerHTML = "Thanks! I'll get back to you soon üöÄ";
                        formStatus.style.color = 'lightgreen';
                        form.reset()
                    } else {
                        response.json().then(data => {
                            if (Object.hasOwn(data, 'errors')) {
                                formStatus.textContent = data["errors"].map(error => error["message"]).join(", ")
                            } else {
                                formStatus.textContent = "Oops! There was a problem submitting your form";
                                formStatus.style.color = 'red';
                            }
                        })
                    }
                }).catch(error => {
                    formStatus.textContent = "Oops! There was a problem submitting your form";
                    formStatus.style.color = 'red';
                });
            }
            form.addEventListener("submit", handleSubmit)

            // --- Back to Top Button Logic ---
            const backToTopButton = document.getElementById('back-to-top');
            if(backToTopButton) {
                window.addEventListener('scroll', () => {
                    if (window.scrollY > 300) {
                        backToTopButton.classList.add('show');
                    } else {
                        backToTopButton.classList.remove('show');
                        backToTopButton.classList.remove('launch');
                    }
                });

                backToTopButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    backToTopButton.classList.add('launch');

                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                    
                    setTimeout(() => {
                        // The 'show' class will be removed by the scroll listener
                        // but we remove 'launch' to ensure it can be re-triggered
                         backToTopButton.classList.remove('launch');
                    }, 1000); // Must match animation duration
                });
            }

            // --- FAB Logic ---
            const fabContainer = document.getElementById('fab-container');
            const fabToggle = document.getElementById('fab-toggle');

            if (fabToggle) {
                fabToggle.addEventListener('click', (e) => {
                    e.stopPropagation(); // Prevent click from bubbling up to the document
                    fabContainer.classList.toggle('active');
                });
            }

            // Close FAB when clicking outside
            document.addEventListener('click', function(event) {
                if (fabContainer && !fabContainer.contains(event.target)) {
                    fabContainer.classList.remove('active');
                }
            });
            
            // --- Custom Context Menu Logic ---
            const contextMenu = document.getElementById('custom-context-menu');
            let longPressTimer;
            const longPressDuration = 500; // 500ms for a long press

            const showContextMenu = (x, y) => {
                // Adjust position to prevent going off-screen
                const winWidth = window.innerWidth;
                const winHeight = window.innerHeight;
                const menuWidth = contextMenu.offsetWidth;
                const menuHeight = contextMenu.offsetHeight;

                x = x > winWidth - menuWidth ? winWidth - menuWidth - 10 : x;
                y = y > winHeight - menuHeight ? winHeight - menuHeight - 10 : y;

                contextMenu.style.left = `${x}px`;
                contextMenu.style.top = `${y}px`;
                contextMenu.classList.add('visible');
            };

            const hideContextMenu = () => {
                contextMenu.classList.remove('visible');
            };

            // Desktop: Right-click
            document.addEventListener('contextmenu', (e) => {
                e.preventDefault();
                showContextMenu(e.pageX, e.pageY);
            });

            // Mobile: Tap and Hold
            document.addEventListener('touchstart', (e) => {
                // Clear any previous timer
                clearTimeout(longPressTimer);
                // Start a new timer
                longPressTimer = setTimeout(() => {
                    const touch = e.touches[0];
                    showContextMenu(touch.pageX, touch.pageY);
                }, longPressDuration);
            }, { passive: true });

            document.addEventListener('touchend', () => {
                // Cancel the long press timer if the touch ends
                clearTimeout(longPressTimer);
            });

            document.addEventListener('touchmove', () => {
                // Cancel the long press timer if the finger moves
                clearTimeout(longPressTimer);
            });


            // Hide menu on click or escape key
            document.addEventListener('click', (e) => {
                // If the click is not on the menu itself, hide it
                if (!contextMenu.contains(e.target)) {
                    hideContextMenu();
                }
            });
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    hideContextMenu();
                }
            });

            // Context menu actions
            contextMenu.addEventListener('click', (e) => {
                const target = e.target.closest('li');
                if (!target) return;

                const action = target.dataset.action;
                const targetId = target.dataset.target;

                switch(action) {
                    case 'nav':
                        if (targetId) {
                            document.querySelector(targetId).scrollIntoView({ behavior: 'smooth' });
                        }
                        break;
                    case 'toggleTheme':
                        toggleTheme();
                        break;
                    case 'copyEmail':
                        navigator.clipboard.writeText('ih.shamim.personal@gmail.com').then(() => {
                            // Optional: Show a temporary "Copied!" message
                            const originalText = target.innerHTML;
                            target.innerHTML = `<i class="fas fa-check"></i> Email Copied!`;
                            setTimeout(() => {
                                target.innerHTML = originalText;
                            }, 2000);
                        });
                        break;
                    case 'reload':
                        window.location.reload();
                        break;
                }
                hideContextMenu();
            });


            // --- Initial Load ---
            applyTheme(currentTheme);
            
            new Typed('#typed-text', {
                strings: ["Graphic Designer.", "Computer Engineer.", "Singer."],
                typeSpeed: 70,
                backSpeed: 50,
                loop: true,
                backDelay: 2000,
            });

            document.getElementById('year-span').textContent = new Date().getFullYear();

            document.getElementById('copy-bio-btn').addEventListener('click', () => {
                const bioText = document.getElementById('bio-paragraph').innerText;
                const textArea = document.createElement("textarea");
                textArea.value = bioText;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);

                const btn = document.getElementById('copy-bio-btn');
                const originalText = btn.innerHTML;
                btn.innerHTML = `<i class="fas fa-check mr-2"></i>Copied!`;
                setTimeout(() => {
                    btn.innerHTML = originalText;
                }, 2000);
            });

            // --- Color Picker Logic ---
            const colorPickerBtn = document.getElementById('color-picker-btn');
            const colorPicker = document.getElementById('color-picker');
            const colorPickerBtnMobile = document.getElementById('color-picker-btn-mobile');
            const colorPickerMobile = document.getElementById('color-picker-mobile');

             // Function to convert hex to RGB
            function hexToRgb(hex) {
                let result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
                return result ? `${parseInt(result[1], 16)}, ${parseInt(result[2], 16)}, ${parseInt(result[3], 16)}` : null;
            }

            colorPickerBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                if (colorPicker.style.display === 'flex') {
                    colorPicker.style.display = 'none';
                } else {
                    colorPicker.style.display = 'flex';
                }
            });
            
            colorPickerBtnMobile.addEventListener('click', (e) => {
                e.stopPropagation();
                colorPickerMobile.classList.toggle('hidden');
                colorPickerMobile.classList.toggle('flex');
            });

            document.querySelectorAll('.color-option').forEach(option => {
                option.addEventListener('click', (e) => {
                    const newColor = e.target.dataset.color;
                    document.documentElement.style.setProperty('--accent-color', newColor);
                    // Update RGB variable for animations
                    const newRgbColor = hexToRgb(newColor);
                    if (newRgbColor) {
                        document.documentElement.style.setProperty('--accent-color-rgb', newRgbColor);
                    }
                    colorPicker.style.display = 'none';
                });
            });

            // Close color picker when clicking outside
            document.addEventListener('click', function(event) {
                if (!colorPickerBtn.contains(event.target) && !colorPicker.contains(event.target)) {
                    colorPicker.style.display = 'none';
                }
                 if (!colorPickerBtnMobile.contains(event.target) && !colorPickerMobile.contains(event.target)) {
                    colorPickerMobile.classList.add('hidden');
                    colorPickerMobile.classList.remove('flex');
                }
            });

            // --- Gemini AI Chatbot Logic ---
            const aiFab = document.getElementById('ai-fab');
            const chatModal = document.getElementById('chat-modal');
            const closeChatBtn = document.getElementById('close-chat-btn');
            const chatForm = document.getElementById('chat-form');
            const chatInput = document.getElementById('chat-input');
            const chatMessages = document.getElementById('chat-messages');
            const sendButton = chatForm.querySelector('button[type="submit"]');

            // --- Chatbot UI Functions ---
            function adjustTextareaHeight() {
                chatInput.style.height = 'auto'; // Reset height to calculate new scrollHeight
                const scrollHeight = chatInput.scrollHeight;
                const maxHeight = 160; // Corresponds to Tailwind's max-h-40
                
                if (scrollHeight > maxHeight) {
                    chatInput.style.height = `${maxHeight}px`;
                    chatInput.style.overflowY = 'auto';
                } else {
                    chatInput.style.height = `${scrollHeight}px`;
                    chatInput.style.overflowY = 'hidden';
                }
            }

            function toggleSendButton() {
                if (chatInput.value.trim() !== '') {
                    sendButton.disabled = false;
                } else {
                    sendButton.disabled = true;
                }
            }

            // --- Chatbot Event Listeners ---
            aiFab.addEventListener('click', () => chatModal.classList.remove('hidden'));
            closeChatBtn.addEventListener('click', () => chatModal.classList.add('hidden'));
            chatModal.addEventListener('click', (e) => {
                if (e.target === chatModal) {
                    chatModal.classList.add('hidden');
                }
            });

            chatInput.addEventListener('input', () => {
                adjustTextareaHeight();
                toggleSendButton();
            });

            chatInput.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    if (!sendButton.disabled) {
                        chatForm.dispatchEvent(new Event('submit', { cancelable: true }));
                    }
                }
            });

            chatForm.addEventListener('submit', handleChatSubmit);
            
            // --- Chatbot Core Logic ---
            async function handleChatSubmit(e) {
                e.preventDefault();
                const userInput = chatInput.value.trim();
                if (!userInput) return;

                appendMessage(userInput, 'user');
                chatInput.value = '';
                adjustTextareaHeight();
                toggleSendButton();
                showLoading(true);

                try {
                    const aiResponse = await callGeminiAPI(userInput);
                    showLoading(false);
                    appendMessage(aiResponse, 'ai');
                } catch (error) {
                    showLoading(false);
                    appendMessage("Oops! Something went wrong. Please try again in a moment.", 'ai');
                }
            }

            function appendMessage(text, sender) {
                const messageWrapper = document.createElement('div');
                const messageBubble = document.createElement('div');
                messageWrapper.className = `flex ${sender === 'user' ? 'justify-end' : 'justify-start'}`;
                messageBubble.className = `chat-message p-3 rounded-lg ${sender === 'user' ? 'user-message' : 'ai-message'}`;
                messageBubble.textContent = text;
                messageWrapper.appendChild(messageBubble);
                chatMessages.appendChild(messageWrapper);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            function showLoading(isLoading) {
                let loadingEl = document.getElementById('loading-indicator');
                if (isLoading) {
                    if (!loadingEl) {
                        loadingEl = document.createElement('div');
                        loadingEl.id = 'loading-indicator';
                        loadingEl.className = 'flex';
                        loadingEl.innerHTML = `
                            <div class="chat-message ai-message p-3 rounded-lg">
                                <div class="loading-dots flex items-center justify-center gap-1">
                                    <span class="w-2 h-2 bg-themed-secondary rounded-full"></span>
                                    <span class="w-2 h-2 bg-themed-secondary rounded-full"></span>
                                    <span class="w-2 h-2 bg-themed-secondary rounded-full"></span>
                                </div>
                            </div>
                        `;
                        chatMessages.appendChild(loadingEl);
                        chatMessages.scrollTop = chatMessages.scrollHeight;
                    }
                } else {
                    if (loadingEl) {
                        loadingEl.remove();
                    }
                }
            }
            
            function getPortfolioContext() {
                // This function gathers text from key sections to provide context to the AI
                const about = document.getElementById('about')?.innerText || '';
                const skills = document.getElementById('skills')?.innerText || '';
                const experience = document.getElementById('experience')?.innerText || '';
                const education = document.getElementById('education')?.innerText || '';
                const services = document.getElementById('services')?.innerText || '';
                return `
                    About IH Shamim: ${about}
                    Skills: ${skills}
                    Work Experience: ${experience}
                    Education: ${education}
                    Services Offered: ${services}
                `;
            }

            async function callGeminiAPI(prompt, retries = 3, delay = 1000) {
                const apiKey = "AIzaSyC8ZeMWstjW71qK3BnMn1B_YeMfypP1g28"; 
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                
                const context = getPortfolioContext();
                const fullPrompt = `You are a friendly and professional AI assistant for IH Shamim's portfolio website. Your name is "Shamim's Assistant". 
                First, detect the language of the user's question (it could be English or Bengali). Your entire response MUST be in the same language you detected. 
                Answer the user's question based on the following context about IH Shamim. 
                If the question cannot be answered from the context (e.g., it's a general knowledge question, asks for current events, or information not present in the context), you are allowed to browse the internet to find the answer. 
                If the question is inappropriate or completely unrelated to IH Shamim, politely decline to answer.
                CONTEXT: ### ${context} ### 
                USER QUESTION: ### ${prompt} ###`;

                const payload = {
                    contents: [{
                        parts: [{
                            text: fullPrompt
                        }]
                    }]
                };

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        // Handle non-2xx responses
                        if (response.status === 429 && retries > 0) { // Too Many Requests
                            await new Promise(resolve => setTimeout(resolve, delay));
                            return callGeminiAPI(prompt, retries - 1, delay * 2); // Exponential backoff
                        }
                        throw new Error(`API Error: ${response.statusText}`);
                    }

                    const result = await response.json();
                    if (result.candidates && result.candidates.length > 0 && result.candidates[0].content.parts.length > 0) {
                        return result.candidates[0].content.parts[0].text;
                    } else {
                        return "I couldn't understand your question. Please try rephrasing it.";
                    }
                } catch (error) {
                    if (retries > 0) {
                        await new Promise(resolve => setTimeout(resolve, delay));
                        return callGeminiAPI(prompt, retries - 1, delay * 2);
                    }
                    console.error("Failed to call Gemini API:", error);
                    throw error;
                }
            }
            
            // --- Gemini Bio Rewriter Logic ---
            const rewriteBioBtn = document.getElementById('rewrite-bio-btn');
            const rewriteOptions = document.getElementById('rewrite-options');
            const bioParagraph = document.getElementById('bio-paragraph');
            const resetBioBtn = document.getElementById('reset-bio-btn');
            let originalBio = bioParagraph ? bioParagraph.innerText : '';
            let bioTypedInstance;

            const bioObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const currentText = bioParagraph.innerText;
                        bioParagraph.innerText = '';
                        bioTypedInstance = new Typed('#bio-paragraph', {
                            strings: [currentText],
                            typeSpeed: 20,
                            showCursor: false,
                            loop: false,
                        });
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });

            if (bioParagraph) {
                bioObserver.observe(bioParagraph);
            }

            if (rewriteBioBtn) {
                rewriteBioBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    rewriteOptions.classList.toggle('hidden');
                });

                document.querySelectorAll('.rewrite-option').forEach(option => {
                    option.addEventListener('click', async (e) => {
                        if (bioTypedInstance) {
                            bioTypedInstance.destroy();
                        }
                        const style = e.target.dataset.style;
                        rewriteOptions.classList.add('hidden');
                        const rewriteBtnSpan = rewriteBioBtn.querySelector('span');
                        const originalBtnText = rewriteBtnSpan.innerText;
                        rewriteBtnSpan.innerText = 'Rewriting...';
                        rewriteBioBtn.disabled = true;

                        try {
                            const newBio = await rewriteBio(originalBio, style);
                            bioParagraph.innerText = newBio;
                            resetBioBtn.classList.remove('hidden'); // Show reset button
                        } catch (error) {
                            bioParagraph.innerText = "Failed to rewrite bio. Please try again.";
                        } finally {
                            rewriteBtnSpan.innerText = originalBtnText;
                            rewriteBioBtn.disabled = false;
                        }
                    });
                });

                document.addEventListener('click', function(event) {
                    if (rewriteOptions && !rewriteBioBtn.contains(event.target) && !rewriteOptions.contains(event.target)) {
                        rewriteOptions.classList.add('hidden');
                    }
                });
            }
            
            if (resetBioBtn) {
                resetBioBtn.addEventListener('click', () => {
                    if (bioTypedInstance) {
                        bioTypedInstance.destroy();
                    }
                    bioParagraph.innerText = originalBio;
                    resetBioBtn.classList.add('hidden');
                });
            }

            async function rewriteBio(bio, style, retries = 3, delay = 1000) {
                const apiKey = "AIzaSyC8ZeMWstjW71qK3BnMn1B_YeMfypP1g28";
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                
                const prompt = `Rewrite the following biography in a ${style} tone. Keep it concise and engaging. Biography: "${bio}"`;

                const payload = {
                    contents: [{ parts: [{ text: prompt }] }]
                };

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        if (response.status === 429 && retries > 0) {
                            await new Promise(resolve => setTimeout(resolve, delay));
                            return rewriteBio(bio, style, retries - 1, delay * 2);
                        }
                        throw new Error(`API Error: ${response.statusText}`);
                    }

                    const result = await response.json();
                    if (result.candidates && result.candidates.length > 0 && result.candidates[0].content.parts.length > 0) {
                        return result.candidates[0].content.parts[0].text;
                    } else {
                        return "Could not rewrite the bio. Please try again.";
                    }
                } catch (error) {
                    if (retries > 0) {
                        await new Promise(resolve => setTimeout(resolve, delay));
                        return rewriteBio(bio, style, retries - 1, delay * 2);
                    }
                    console.error("Failed to call Gemini API for bio rewrite:", error);
                    throw error;
                }
            }

            // --- Gemini Contact Message Generator ---
            const generateMessageBtn = document.getElementById('generate-message-btn');
            const contactMessageTextarea = document.getElementById('contact-message');

            if (generateMessageBtn) {
                generateMessageBtn.addEventListener('click', async () => {
                    const keywords = contactMessageTextarea.value.trim();
                    if (!keywords) {
                        contactMessageTextarea.placeholder = "Please enter some keywords first!";
                        return;
                    }

                    const originalBtnText = generateMessageBtn.innerHTML;
                    generateMessageBtn.innerHTML = `<i class="fas fa-spinner fa-spin mr-2"></i>Generating...`;
                    generateMessageBtn.disabled = true;

                    try {
                        const newMessage = await generateContactMessage(keywords);
                        contactMessageTextarea.value = newMessage;
                    } catch (error) {
                        contactMessageTextarea.value = "Sorry, couldn't generate a message. Please try again.";
                    } finally {
                        generateMessageBtn.innerHTML = originalBtnText;
                        generateMessageBtn.disabled = false;
                    }
                });
            }

            async function generateContactMessage(keywords, retries = 3, delay = 1000) {
                 const apiKey = "AIzaSyC8ZeMWstjW71qK3BnMn1B_YeMfypP1g28";
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                
                const prompt = `You are a professional assistant. Write a polite and professional contact message to IH Shamim based on the following keywords: "${keywords}". The message should be well-structured, friendly, and ready to send. Make sure to start with a proper greeting and end with a polite closing.`;

                const payload = {
                    contents: [{ parts: [{ text: prompt }] }]
                };

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        if (response.status === 429 && retries > 0) {
                            await new Promise(resolve => setTimeout(resolve, delay));
                            return generateContactMessage(keywords, retries - 1, delay * 2);
                        }
                        throw new Error(`API Error: ${response.statusText}`);
                    }

                    const result = await response.json();
                    if (result.candidates && result.candidates.length > 0 && result.candidates[0].content.parts.length > 0) {
                        return result.candidates[0].content.parts[0].text;
                    } else {
                        return "Could not generate the message. Please try again.";
                    }
                } catch (error) {
                    if (retries > 0) {
                        await new Promise(resolve => setTimeout(resolve, delay));
                        return generateContactMessage(keywords, retries - 1, delay * 2);
                    }
                    console.error("Failed to call Gemini API for contact message:", error);
                    throw error;
                }
            }

            // --- Lightbox Logic ---
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightbox-img');
            const closeLightboxBtn = document.getElementById('close-lightbox');
            
            const openLightbox = (imgSrc) => {
                lightboxImg.src = imgSrc;
                lightbox.classList.add('visible');
            };

            const closeLightbox = () => {
                lightbox.classList.remove('visible');
            };

            document.querySelectorAll('.photo-slider .swiper-slide').forEach(slide => {
                slide.addEventListener('click', (e) => {
                    // Only open the lightbox if the clicked slide is the active one
                    if (e.currentTarget.classList.contains('swiper-slide-active')) {
                        const imgSrc = e.currentTarget.querySelector('img').src;
                        openLightbox(imgSrc);
                    }
                });
            });

            closeLightboxBtn.addEventListener('click', closeLightbox);
            lightbox.addEventListener('click', (e) => {
                if (e.target === lightbox) {
                    closeLightbox();
                }
            });

            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && lightbox.classList.contains('visible')) {
                    closeLightbox();
                }
            });


            // Initial call to set button state
            toggleSendButton();

        });

        // --- Preloader Hiding Logic ---
        window.onload = function() {
            const preloader = document.getElementById('preloader');
            if (preloader) {
                // Add a minimum display time for the animation to be seen
                setTimeout(() => {
                    preloader.classList.add('hidden');
                }, 2500); // Adjust time as needed
            }
        };
    </script>

</body>
</html>
