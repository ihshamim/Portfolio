    <!-- AI Chat Modal -->
    <div id="chat-modal" class="hidden fixed inset-0 bg-black bg-opacity-60 z-[10000] flex justify-center items-end sm:items-center">
        <div id="chat-modal-content" class="bg-themed-card shadow-2xl w-full flex flex-col rounded-t-2xl sm:rounded-lg h-full sm:h-[90vh] sm:max-h-[700px] sm:max-w-lg">
            <!-- Modal Header -->
            <div class="flex-shrink-0 flex justify-between items-center p-4 border-b border-themed">
                <h3 class="text-xl font-bold flex items-center gap-2"><i class="fas fa-robot accent-color"></i> AI Assistant</h3>
