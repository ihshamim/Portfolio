        <button id="ai-fab" class="w-14 h-14 rounded-full bg-accent text-white flex items-center justify-center shadow-lg text-2xl focus:outline-none transition-transform duration-300 transform hover:scale-110">
            <i class="fas fa-robot"></i>
        </button>
    </div>

    <!-- Back to Top Button -->
    <a id="back-to-top" href="#home" title="Back to Top">
        <i class="fas fa-rocket"></i>
    </a>

    <!-- Custom Context Menu -->
    <div id="custom-context-menu">
        <ul>
            <li data-action="nav" data-target="#home"><i class="fas fa-home"></i> Go to Home</li>
            <li data-action="nav" data-target="#about"><i class="fas fa-user"></i> Go to About</li>
            <li data-action="nav" data-target="#photos"><i class="fas fa-camera-retro"></i> Go to Photos</li>
            <li data-action="nav" data-target="#portfolio"><i class="fas fa-briefcase"></i> Go to Portfolio</li>
            <li data-action="nav" data-target="#contact"><i class="fas fa-envelope"></i> Go to Contact</li>
            <li class="separator"></li>
            <li data-action="toggleTheme"><i class="fas fa-adjust"></i> Toggle Theme</li>
